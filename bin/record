# A script for recording screencast

elif [[ $1 = "start" ]]; then
    title=record_$(date '+%Y%m%d%H%M').mkv
    echo $time
    ffmpeg -f x11grab \
        -s 1366x768 \
        -an -i :0.0 \
        -c:v libvpx \
        -b:v 5M \
        -crf 10 \
        -quality realtime \
        -y ~/Videos/$title
else
    echo 'Do your research'
fi
