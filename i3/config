# set color variables
set $inactive-bg    #2f343f
set $active-bg      #ffffff
set $urgent         #e53935
set $focused-ws     #b8babc
set $unfocused-ws   #2f343f

# -- general settings ----------------------------------------------------------

set $mod Mod4
floating_modifier $mod
focus_follows_mouse no
font pango:Monaco for powerline 9
default_border pixel 2
default_floating_border pixel 2
gaps inner 10
gaps outer 0

# -- key bindings --------------------------------------------------------------

# frequently used
bindsym $mod+Return exec --no-startup-id st
bindsym $mod+p exec --no-startup-id dmenu_run -i
bindsym $mod+q kill
bindsym $mod+d exec --no-startup-id sh ~/projects/dotFiles/i3/lock.sh

# system commands
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'Want to exit?' -b 'Yes, exit i3' 'i3-msg exit'"

# splitting
bindsym $mod+v split h
bindsym $mod+b split v

# layouts
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# focus
bindsym $mod+a focus parent
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# moving windows
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# set workspace variables
set $workspace1 "1"
set $workspace2 "2"
set $workspace3 "3"
set $workspace4 "4"
set $workspace5 "5"
set $workspace6 "6"
set $workspace7 "7"
set $workspace8 "8"
set $workspace9 "9"
set $workspace10 "?"

# switch to workspace
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace $workspace6
bindsym $mod+7 workspace $workspace7
bindsym $mod+8 workspace $workspace8
bindsym $mod+9 workspace $workspace9
bindsym $mod+0 workspace $workspace10

# move focused container to workspace
bindsym $mod+Shift+1 move container to  workspace $workspace1
bindsym $mod+Shift+2 move container to  workspace $workspace2
bindsym $mod+Shift+3 move container to  workspace $workspace3
bindsym $mod+Shift+4 move container to  workspace $workspace4
bindsym $mod+Shift+5 move container to  workspace $workspace5
bindsym $mod+Shift+6 move container to  workspace $workspace6
bindsym $mod+Shift+7 move container to  workspace $workspace7
bindsym $mod+Shift+8 move container to  workspace $workspace8
bindsym $mod+Shift+9 move container to  workspace $workspace9
bindsym $mod+Shift+0 move container to  workspace $workspace10

# Assign window, you can find window class using xprop
# workspace 2 (web browsers)
assign [class=Firefox|Chromium|Opera] 2
# workspace 3 (docs)
assign [class=Geany|libreoffice*|Wps|MuPDF] 3
# workspace 4 (multimedia)
assign [class=Vlc|mpv|Audacity|Ghb|Xfburn] 4
# workspace 5 (file-manager)
assign [class=Thunar|Nautilus] 5
# workspace 9 (File Transfer)
assign [class=Filezilla|Deluge] 9

# Start these windows in floating mode
for_window [class=feh] floating enable

# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {

        # These bindings trigger as soon as you enter the resize mode
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# Audio volume controls
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q set Master 1%-
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q set Master 1%+
bindsym XF86AudioMute exec --no-startup-id amixer -q -D pulse set Master toggle
bindsym $mod+shift+n exec --no-startup-id amixer -q set Master 1%+
bindsym $mod+shift+b exec --no-startup-id amixer -q set Master 1%-
bindsym $mod+shift+m exec --no-startup-id amixer -q -D pulse set Master toggle

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10 && pkill -RTMIN+12 i3blocks
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10 && pkill -RTMIN+12 i3blocks

# -- window colors -------------------------------------------------------------

#                         border          background     text           indicator
client.focused            $active-bg      $active-bg     $inactive-bg   $active-bg
client.unfocused          $inactive-bg    $inactive-bg   $active-bg     $inactive-bg
client.focused_inactive   $inactive-bg    $inactive-bg   $active-bg     $inactive-bg
client.urgent             $urgent         $urgent        $urgent        $urgent

bar {
    Position top
    font pango:Monaco for powerline 9
    separator_symbol "  "
    status_command i3blocks -c $HOME/.config/i3/i3blocks.conf
    colors {
        background $inactive-bg
        statusline #b8babc
        separator #757575
        #                   border         background     text
        focused_workspace   $focused-ws    $focused-ws    $unfocused-ws
        inactive_workspace  $unfocused-ws  $unfocused-ws  $active-ws
        urgent_workspace    $urgent        $urgent        $active-ws
    }
}

# -- startup programs ----------------------------------------------------------

exec_always --no-startup-id feh --bg-scale ~/Pictures/backgrounds/polygon.jpg
exec_always --no-startup-id sh ~/projects/dotFiles/keyboard.sh
exec --no-startup-id compton --config $HOME/.config/compton.conf
exec --no-startup-id nm-applet
exec --no-startup-id xinput set-prop 'DELL0767:00 06CB:7E92 Touchpad' 'libinput Tapping Enabled' 1
exec --no-startup-id xinput set-prop 'DELL0767:00 06CB:7E92 Touchpad' 'libinput Natural Scrolling Enabled' 1
